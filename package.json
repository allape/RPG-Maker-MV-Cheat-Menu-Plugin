{
  "name": "rpg-maker-mv-cheater",
  "version": "0.1.0",
  "description": "Refined cheat plugin for RPG Maker MV",
  "private": true,
  "scripts": {
    "prepare:clean": "npx rimraf build/ dist/",
    "prepare:webpack": "copyfiles -u 1 src/**/*.scss src/**/*.sass src/**/*.css build/",

    "build:ts": "npm run prepare:clean && tsc",
    "build:webpack": "npm run prepare:webpack && webpack",
    "build:go": "cd patcher && ./build.sh",

    "build": "npm run build:ts && npm run build:webpack && npm run build:go",
    "postbuild": "node postbuild.js"
  },
  "keywords": [
    "RPG-Maker-MV"
  ],
  "author": "allape",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.5.1",
    "eslint": "^8.7.0",
    "glob": "^7.2.0",
    "rimraf": "^3.0.2",
    "sass": "^1.45.2",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "typescript": "^4.4.4",
    "webpack": "^5.62.1",
    "webpack-cli": "^4.9.1"
  }
}
